modules = ["nodejs-20", "java-graalvm22.3", "web", "bash", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mariadb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vite Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MySQL Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Backend"

[[workflows.workflow]]
name = "Vite Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "MySQL Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start_mysql.sh"

[[workflows.workflow]]
name = "Spring Boot Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start_backend.sh"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 36877
externalPort = 5000

[[ports]]
localPort = 37017
externalPort = 3002

[[ports]]
localPort = 43825
externalPort = 3000

[[ports]]
localPort = 44113
externalPort = 4200

[[ports]]
localPort = 44729
externalPort = 3001

[[ports]]
localPort = 45271
externalPort = 3003

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "vite", "preview", "--host", "0.0.0.0", "--port", "5000"]
build = ["npm", "run", "build"]
