              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shippingAddress\": {\n    \"fullName\": \"John Doe\",\n    \"mobile\": \"1234567890\",\n    \"email\": \"john@example.com\",\n    \"addressLine1\": \"123 Main Street\",\n    \"addressLine2\": \"Apt 4B\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\",\n    \"country\": \"USA\",\n    \"isDefault\": true\n  },\n  \"paymentMethod\": \"COD\",\n  \"notes\": \"Please deliver between 10 AM - 5 PM\",\n  \"couponCode\": null,\n  \"discount\": 0\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Create a new order from cart items (requires authentication)"
          },
          "response": []
